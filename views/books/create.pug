extends ../../layouts/common

block content

  h1(class="text-center") Create Book
  
  if errors 
    each error in errors
      .alert.alert-danger= error

  form(action="/route/create", method="POST")

    label(for="title") Title: 

    input#title(type="text", name= "title", class="form-control")

    label(for="description") Description: 

    input#description(type="text", name= "description", class="form-control")
 
    button(type="submit", class="btn btn-outline-primary mt-2") Create
