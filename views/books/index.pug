extends ../../layouts/common

block content

  h1(class="text-center") Transactions Libary

  form(action="/transaction/view",  class="d-flex")

    button(type="submit", class="btn btn-primary") View

  h1(class="text-center") Login User

  form(action="/users/login", method="GET", class="d-flex")

    button(type="submit", class="btn btn-primary") Login

  h1(class="text-center") Book List

  form(action="/route/create", class="d-flex")

    button(type="submit", class="btn btn-primary") Add Title

  form(action="/route/search", method="GET", class="d-flex")

    input(type="text", name= "q", class="form-control")

    button(type="submit", class="btn btn-primary ml-2") Search 

  ul
    each book in books
      li
        p Title:
          span &nbsp
          span= book.title
        p Description:
          span &nbsp
          span= book.description
        //TẠO KHOẢN CÁCH
        span &nbsp; 
        a(class="btn btn-outline-primary", href='/route/update/' + book.bookId) Update
        span &nbsp; 
        a(class="btn btn-outline-primary", href='/route/delete/' + book.bookId) Delete


      
    