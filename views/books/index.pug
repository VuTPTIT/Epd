extends ../../layouts/common

block content

  h1 Transactions Libary

  form(action="/transaction/view")

    button(type="submit", class="btn btn-primary") View

  h1 Login User

  form(action="/users/login", method="GET")

    button(type="submit", class="btn btn-primary") Login

  h1 Book List

  form(action="/route/create")

    button(type="submit", class="btn btn-primary") Add Title

  form(action="/route/search", method="GET")

    input(type="text", name= "q")

    button(type="submit", class="btn btn-primary") Search

  ul
    each book in books
      li
        p Title:
          span &nbsp
          span= book.title
        p Description:
          span &nbsp
          span= book.description
        //TẠO KHOẢN CÁCH
        span &nbsp; 
        a(class="btn btn-outline-primary", href='/route/update/' + book.bookId) Update
        span &nbsp; 
        a(class="btn btn-outline-primary", href='/route/delete/' + book.bookId) Delete


      
    