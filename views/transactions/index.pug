style.
  table, tr, th, td {
    border: 1px solid black;
    }
  

h1 Transactions Libary

form(action="/transactions/create")

  button Add User
  
form(action="/route")

  button Back

form(action="/transactions/search", method="GET")

  input(type="text", name= "q")
    
  button Search
//  
  ul
  each transaction in transactions
    li
      p Name:
        span &nbsp
        span= transaction.name
        //TẠO KHOẢN CÁCH
      span &nbsp; 
      a(href='/transactions/update/' + transaction.id) Update
      span &nbsp; 
      a(href='/transactions/delete/' + transaction.id) Delete
      
table
  tr
    th ID
    th User
    th Book
  tr
    td= transaction.transactionID
    td= transaction.users
    td= transaction.books
    