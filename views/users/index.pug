h1 Book List

form(action="/route/create")

  button Add Title

form(action="/route/search", method="GET")

  input(type="text", name= "q")
    
  button Search

ul
  each book in books
    li
      p Title:
        span &nbsp
        span= book.title
      p Description:
        span &nbsp
        span= book.description
      //TẠO KHOẢN CÁCH
      span &nbsp; 
      a(href='/route/update/' + book.id) Update
      span &nbsp; 
      a(href='/route/' + book.id) Delete
      
      
    