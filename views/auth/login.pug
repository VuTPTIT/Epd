extends ../../layouts/common

block content
  h1 Login
  
  if errors 
    each error in errors
      .alert.alert-danger(role='alert')= error

  form(action="", method="POST")
  
    .form-group   
    label(for="Email") Email: 

    input#email(type="email", name= "email", class="form-control", value=values ? values.email : "")

    .form-group 
    label(for="Email") Password: 

    input#password(type="password", name= "password", class="form-control", value=values ? values.password : "")

    button(type="submit", class="btn btn-outline-primary mt-4") Login 
    
  form(action="/users/create")
    button(type="submit", class="btn btn-outline-primary mt-2") Sign Up 
    