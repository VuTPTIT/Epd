extends ../../layouts/common

block content

  if errors 
    each error in errors
      .alert.alert-danger(role='alert')= error

  h1(class="text-center") Create User

  form(action="/users/create", method="POST", class="d-flex")
  
    .form-group   
      label(for="Email") Email: 

      input#email(type="email", name= "email", class="form-control")

    .form-group 
      label(for="Email") Password: 

      input#password(type="password", name= "password", class="form-control")
      
    p 
      button(type="submit", class="btn btn-outline-primary ml-2") Create
