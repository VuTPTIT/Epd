extends ../../layouts/common

block content

  if errors 
    each error in errors
      .alert.alert-danger(role='alert')= error

  h1(class="text-center") Create User

  form(action="/auth/signup", method="POST", class="d-flex")
  
    .form-group   
      label(for="name") Name: 

      input#name(type="text", name= "name", class="form-control", value=name)
  
    .form-group   
      label(for="Email") Email: 

      input#email(type="email", name= "email", class="form-control", value=email)

    .form-group 
      label(for="Email") Password: 

      input#password(type="password", name= "password", class="form-control", value=password)
     
    p 
      button(type="submit", class="btn btn-outline-primary ml-2") Create
