extends ../../layouts/common

block content

  h1(class="text-center") Users List

  form(action="/users/create", class="d-flex")

    button(type="submit", class="btn btn btn-outline-primary") Add User

  form(action="/route", class="d-flex")

    button(type="submit", class="btn btn btn-outline-primary") Back

  form(action="/users/search", method="GET", class="d-flex")

    input(type="text", name= "q", class="form-control")

    button(type="submit", class="btn btn btn-outline-primary ml-2") Search

  ul(class="list-group")
    each user in users
      li(class="list-group-item")
        p(class="d-flex justify-content-center") Name:
          span &nbsp
          span= user.name
          //TẠO KHOẢN CÁCH
        span &nbsp;
        ul(class="nav justify-content-center")
          li(class="nav-item") 
            a(class="btn btn-outline-primary", href='/users/update/' + user.userId) Update
          li(class="nav-item") 
            a(class="btn btn-outline-primary ml-2", href='/users/delete/' + user.userId) Delete